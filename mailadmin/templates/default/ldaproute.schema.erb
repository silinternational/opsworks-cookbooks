# objectclasses

# The 'mailRecipientPerson' objectclass seems to have been deprecated in 
# the new draft-lachman-laser-ldap-mail-routing-02.txt

objectclass ( 1.3.6.1.4.1.9933.1.1.1.2.2.1 
	NAME 'mailRecipientPerson' 
	DESC 'Internet local mail recipient' 
	SUP top AUXILIARY 
	MAY     ( mailAltAddress $
		 mailLocalAddress $
		 mailSystem $
		 mailServer $
		 mailRoutingAddress $
		 mailOwner $
		 DominoUid $
		 DominoModdate $
		 Dominodn $
		 Public) ) 

# from draft-lachman-laser-ldap-mail-routing-02.txt, assigned one of our IANA numbers for now
objectclass ( 1.3.6.1.4.1.9933.1.1.1.2.2.2 
	NAME 'inetLocalMailRecipient' 
	DESC 'Internet local mail recipient' 
	SUP top AUXILIARY 
	MAY     ( mailLocalAddress $
		 mailHost $
		 mailRoutingAddress) )

