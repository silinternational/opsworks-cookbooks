attributetype ( 1.3.6.1.4.1.9933.1.1.1.2.1.101 
	NAME 'DominoModdate' 
	DESC 'Domino moddate field (reilly), timestamp of last update' 
	EQUALITY caseIgnoreIA5Match 
	SUBSTR caseIgnoreIA5SubstringsMatch 
	SYNTAX 1.3.6.1.4.1.1466.115.121.1.26{256} SINGLE-VALUE )

# The 'Dominodn' attribute is to contain the domino distinguished name value

attributetype ( 1.3.6.1.4.1.9933.1.1.1.2.1.102 
